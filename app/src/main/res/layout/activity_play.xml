<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/old_paper"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.p3p.hangman.PlayActivity"
    android:id="@+id/rl_play">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1P"
        android:layout_marginLeft="140dp"
        android:textSize="60sp"
        android:id="@+id/tv_play_1p"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter name of movie :"
        android:textSize="25sp"
        android:id="@+id/tv_play_emn"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv_play_1p"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_play"
        android:hint="Enter movie name here"
        android:layout_below="@+id/tv_play_emn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btn_play_ok"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:onClick="me_btn_play_ok"
        android:layout_below="@+id/et_play"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
