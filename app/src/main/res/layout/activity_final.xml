<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/old_paper"
    tools:context="com.p3p.hangman.FinalActivity"
    android:id="@+id/rl_final">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie Name:"
        android:textSize="30sp"
        android:id="@+id/tv_final_movie"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie Name"
        android:textSize="40sp"
        android:id="@+id/tv_final_mname"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wish"
        android:textSize="50sp"
        android:id="@+id/tv_final_wish"
        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again!"

        android:textSize="25sp"
        android:background="@android:color/transparent"
        android:id="@+id/btn_final_playagain"
        android:layout_marginTop="60dp"
        android:onClick="me_btn_final_playagain"
        android:layout_below="@+id/tv_final_wish"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="25sp"
        android:background="@android:color/transparent"
        android:id="@+id/btn_final_menu"
        android:layout_marginTop="30dp"
        android:onClick="me_btn_final_menu"
        android:layout_below="@+id/btn_final_playagain"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
